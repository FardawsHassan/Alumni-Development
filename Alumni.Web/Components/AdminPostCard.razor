<MudItem Class="post" Style="padding:10px 15px">
    <MudCard Elevation="2" Style="border-radius:3px 3px 8px 8px;min-width:300px;">
        <MudCardContent>
            <MudItem Style="width:100%;">
                <MudImage ObjectFit="ObjectFit.Cover" Style="width:100%;" Height="150" Src="@PhotoPath"></MudImage>
            </MudItem>
            <MudItem Class="pt-2">
                <MudText Typo="Typo.h5">@Title</MudText>
            </MudItem>
            @if (Date.HasValue)
            {
                <MudItem>
                    <MudText Typo="Typo.caption">@Date.Value.ToString("dd MMMM, yyyy")</MudText>
                </MudItem>
            }
            @if (!string.IsNullOrEmpty(Description))
            {                
                <MudItem>
                    <MudText Style="max-height: 340px;" Typo="Typo.body2">@Description.Substring(0,Math.Min(Description.Length,80))@(Description.Length > 80 ? " ..." : "")</MudText>
                </MudItem>
            }
            <MudItem Style="position: absolute;bottom: 20px;left: 16px;" Class="pt-3 pt-2">
                <MudButton Color="Color.Info" Variant="Variant.Outlined" Href="inprogress">Read More</MudButton>
            </MudItem>
        </MudCardContent>
    </MudCard>
</MudItem>

<style>
    .mud-card{
        height: 100%;
        height: 338px;
        max-width: 300px;
        position:relative;
    }

    .post:hover .mud-card{
         box-shadow: var(--mud-elevation-4);
    }

    p{
        word-wrap:anywhere;
    }
</style>
@code {
    [Parameter]
    public string Title { get; set; } = string.Empty;
    [Parameter]
    public string PhotoPath { get; set; } = string.Empty;
    [Parameter]
    public string Description { get; set; } = string.Empty;
    [Parameter]
    public DateTime? Date { get; set; } = null;
}
